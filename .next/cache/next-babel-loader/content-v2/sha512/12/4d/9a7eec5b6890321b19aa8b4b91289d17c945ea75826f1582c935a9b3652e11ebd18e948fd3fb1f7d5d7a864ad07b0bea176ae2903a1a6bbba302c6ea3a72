{"ast":null,"code":"export function DragScroll(element) {\n  element.style.cursor = 'grab';\n  let pos = {\n    top: 0,\n    left: 0,\n    x: 0,\n    y: 0\n  };\n\n  const mouseDownHandler = e => {\n    element.style.cursor = 'grabbing';\n    element.style.userSelect = 'none';\n    pos = {\n      left: element.scrollLeft,\n      top: element.scrollTop,\n      x: e.clientX,\n      y: e.clientY\n    };\n    document.addEventListener('mousemove', mouseMoveHandler);\n    document.addEventListener('mouseup', mouseUpHandler);\n  };\n\n  const mouseMoveHandler = e => {\n    const dx = e.clientX - pos.x;\n    const dy = e.clientY - pos.y;\n    element.scrollTop = pos.top - dy;\n    element.scrollLeft = pos.left - dx;\n  };\n\n  const mouseUpHandler = () => {\n    element.style.cursor = 'grab';\n    element.style.removeProperty('user-select');\n    document.removeEventListener('mousemove', mouseMoveHandler);\n    document.removeEventListener('mouseup', mouseUpHandler);\n  };\n\n  element.addEventListener('mousedown', mouseDownHandler);\n}","map":{"version":3,"sources":["/Users/ainkhm/Desktop/tga_test/src/helpers/dragScroll.js"],"names":["DragScroll","element","style","cursor","pos","top","left","x","y","mouseDownHandler","e","userSelect","scrollLeft","scrollTop","clientX","clientY","document","addEventListener","mouseMoveHandler","mouseUpHandler","dx","dy","removeProperty","removeEventListener"],"mappings":"AAAA,OAAO,SAASA,UAAT,CAAoBC,OAApB,EAA6B;AACnCA,EAAAA,OAAO,CAACC,KAAR,CAAcC,MAAd,GAAuB,MAAvB;AACA,MAAIC,GAAG,GAAG;AAAEC,IAAAA,GAAG,EAAE,CAAP;AAAUC,IAAAA,IAAI,EAAE,CAAhB;AAAmBC,IAAAA,CAAC,EAAE,CAAtB;AAAyBC,IAAAA,CAAC,EAAE;AAA5B,GAAV;;AACA,QAAMC,gBAAgB,GAAIC,CAAD,IAAO;AAC/BT,IAAAA,OAAO,CAACC,KAAR,CAAcC,MAAd,GAAuB,UAAvB;AACAF,IAAAA,OAAO,CAACC,KAAR,CAAcS,UAAd,GAA2B,MAA3B;AACAP,IAAAA,GAAG,GAAG;AACLE,MAAAA,IAAI,EAAEL,OAAO,CAACW,UADT;AAELP,MAAAA,GAAG,EAAEJ,OAAO,CAACY,SAFR;AAGLN,MAAAA,CAAC,EAAEG,CAAC,CAACI,OAHA;AAILN,MAAAA,CAAC,EAAEE,CAAC,CAACK;AAJA,KAAN;AAMAC,IAAAA,QAAQ,CAACC,gBA